<Application x:Class="Caesar_Cipher.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModel="clr-namespace:Caesar_Cipher.MVVM.ViewModel"
             xmlns:view="clr-namespace:Caesar_Cipher.MVVM.View"
             xmlns:local="clr-namespace:Caesar_Cipher"
             StartupUri="MainWindow.xaml">
    <Application.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles/ButtonStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <DataTemplate DataType="{x:Type viewModel:CryptionViewModel}">
                <view:CryptionView/>
            </DataTemplate>

            <DataTemplate DataType="{x:Type viewModel:HelpViewModel}">
                <view:HelpView/>
            </DataTemplate>

        </ResourceDictionary>
    </Application.Resources>
</Application>
